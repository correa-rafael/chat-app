{
    "version": 2,
    "builds": [
      { "src": "package.json", "use": "@vercel/static-build" },
      { "src": "/server/src/index.js", "use": "@vercel/node" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server/src/index.js" },
      { "source": "(.*)", "destination": "/src/pages/index.tsx" }
    ]
  }
  